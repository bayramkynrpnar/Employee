
@model List<Employee.Data.Models.CompanyModels>
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<form class="form-horizontal" method="post" action="Register"enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("Name")
        @Html.TextBox("Name", null, new { @class = "form-control" })
        @Html.Label("Surname")
        @Html.TextBox("Surname", null, new { @class = "form-control" })

        @*<label>Ad</label>
            <input type="text" class="form-control" name="CompanyName" />*@
        @Html.Label("Email")
        @Html.TextBox("Email", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @*<label>Soyad</label>
            <input type="text" class="form-control" name="CompanyCity" />*@
        @Html.Label("Password")
        @Html.TextBox("Password", null, new { @class = "form-control" })
    </div>
    


    
    <div class="form-group">
        <select name="CompanyId" class="select2 form-control">
            @foreach (var item in ViewBag.list)
            {
                <option value="@item.CompanyId">@item.CompanyName</option>
            }
        </select>
    </div>
    

        

    <input type="submit" class="btn btn-primary" value="Kaydet" />

</form>


